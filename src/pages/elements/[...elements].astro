import { Liquid } from 'liquidjs';

const engine = new Liquid();

const liquid_template = `
  <html>
    <head>
      <title>{title}</title>
    </head>
    <body>
      <h1>{title}</h1>
      <p>{text}</p>
    </body>
  </html>
`;

const liquid_context = Astro.props;
// const liquid_context = { title: "Graphkend - React Flow Example" };

const html = await engine.parseAndRender(liquid_template, Astro.props);

export function getStaticPaths() {
  const pages = [
    {
      elements: undefined,
      title: "e1",
      text: "Welcome to the Astro store!",
    },
    {
      elements: "e2",
      title: "Astro products",
      text: "We have lots of products for you",
    },
    {
      elements: "e3/path",
      title: "The ultimate Astro handbook",
      text: "If you want to learn Astro, you must read this book.",
    },
  ];

  return pages.map(({ elements, title, text }) => {
    return {
      params: { elements },
      props: { title, text },
    };
  });
}

